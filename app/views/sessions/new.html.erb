<% unless @message.nil? %>
  <div id="errors">
    <h3>Errors!</h3>
    <ul>
      <li><em><%= @message %></em></li>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="form-horizontal">

  <%= form_tag "/session" do %>
  <div class="form-group">
    <div class="col-md-3 col-md-offset-4">
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-3 col-md-offset-4">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-md-3 col-md-offset-4">
      <%= submit_tag "Log in", :class=> "form-control" %>
    </div>
  </div>

      <% end %>

  </div>
</div>