  <div class="login_form">
    
      <%= form_for @user do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email %>
    

    
      <%= f.label :password %>
      <%= f.password_field :password %>
    

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>



      <%= f.label :Username %>
      <%= f.text_field :user_name %>

    

    <%= f.submit @user.id.nil? ? "Create Account" : "Save Changes" %>

    <% end %>

  </div>