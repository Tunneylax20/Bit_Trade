}

/*Top Nav Bar*/

.nav {
  background-color: #040301;
  width: 100%;
  height: 3em;
  padding: 1em;
  color: #3BB05A;
  font-weight: 600;
  font-size: 14px;


}

#login {
  float: right;
  margin-right: 5em;
}

#price{
  list-style-type: none;
  display: inline-block;
  padding-right: 5em;
}

/*Links*/

a:link {
  color: #1C5430;
}
a:visited {
  color: #1C5430;
}

/*Transactions Table*/

table {
  margin-left: auto;
  margin-right: auto;
}

table, th {
  border: 1px solid black;
  text-align: center;
}

/*Coinbase Donation Button*/

.coinbase {
 text-align: center;
 padding-top: 5em;
}

