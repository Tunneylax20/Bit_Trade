/*
*= require_self
*= require normalize-rails
*= require_tree .
*/

body {
  background-image: url(<%= asset_path 'test.png' %>);
  font-family: 'Open Sans', sans-serif;
}

.nav {
  background-color: #040301;
  width: 100%;
  height: 3em;
  padding: 1em;
  color: #3BB05A;
  font-weight: 600;
  font-size: 14px;

}

#login {
  float: right;
  margin-right: 5em;
}

#price{
  list-style-type: none;
  display: inline-block;
  padding-right: 5em;
}
a:link {
  color: #1C5430;
}
a:visited {
  color: #3BB05A;
}

table {
  margin-left: auto;
  margin-right: auto;
}

table, th {
  border: 1px solid black;
  text-align: center;
}


.coinbase {
 text-align: center;
}

.user_panel {
  text-align: center;
}

.welcome {
  text-align: center;
}

iframe {
  margin-left: 50px;
}

.login_form {
  margin: 0 auto;
  width: 100px;
  padding: 5em;
}

.login_form input[type="submit"] {
  color: #3BB05A;
  background-color: #040301;
  border-top: 1px solid #040301;
  border-left: hidden;
  border-right: hidden;
  border-bottom: hidden;
  border-radius: 4px;
  padding: 10px 15px 10px 15px;
  position: relative;
  margin: 15px 30px 30px 30px;
  font-size: 14px;
  line-height: 14px;

  /*box-shadow: inset 0 -3px 0 #55988d;*/
}

.login_fields {
  padding: 0.5em;
}

